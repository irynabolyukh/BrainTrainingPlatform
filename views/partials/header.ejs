<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Brain Training</title>
  <link rel="icon" href="/brain.ico">
  <link rel="stylesheet" href="/styles/styles.css">
  <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
</head>
<body>
  <nav>
    <h1><a href="/">Brain Training Platform</a></h1>
    <ul>
      <% if (user) { %>
        <li>Hello, <%= user.name %></li>
        <li><b><%= user.status %>:</b> <%= user.score %> cls</li>
        <li><a href="/logout" class="btn">Log out</a></li>
      <% } else { %>
        <li><a href="/login" class="btn">Log in</a></li>
        <li><a href="/signup" class="btn">Sign up</a></li>
      <% } %>
    </ul>
  </nav>
