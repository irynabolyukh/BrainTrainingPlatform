<%- include('partials/header'); -%>

<ul class="games">
  <li class="games__game">
    <img src="/games-img-sequence.png" alt="">
    <h4>Circles sequence</h4>
    <h5>All levels</h5>
    <p>Try to memorize the circles and recreate the sequence!</p>
    <a href="/game-sequence" class="btn btn-game">Play</a>
  </li>
  <% if (user.status === 'Beginner') { %>
    <li class="games__game">
      <img src="/games-img-cards.png" alt="">
      <h4>Flip the card</h4>
      <h5>Beginner</h5>
      <p>Improve your memory by finding a pair for each card!</p>
      <a href="/game-sequence" class="btn btn-game">Play</a>
    </li>
    <li class="games__game">
      <img src="/games-img-cool.png" alt="">
      <h4>Color check</h4>
      <h5>Beginner</h5>
      <p>Is the block the same color as it says? <br> Lets play!</p>
      <a href="/game-sequence" class="btn btn-game">Play</a>
    </li>
  <% } else if (user.status === 'Average') { %>
    <li class="games__game">
      <img src="/games-img-cards.png" alt="">
      <h4>Flip the card</h4>
      <h5>Average</h5>
      <p>Improve your memory by finding a pair for each card!</p>
      <a href="/game-sequence" class="btn btn-game">Play</a>
    </li>
    <li class="games__game">
      <img src="/games-img-cool.png" alt="">
        <h4>Color check</h4>
        <h5>Average</h5>
        <p>Is the block the same color as it says? <br> Lets play!</p>
      <a href="/game-sequence" class="btn btn-game">Play</a>
    </li>
  <% } else { %>
    <li class="games__game">
      <img src="/games-img-cards.png" alt="">
      <h4>Flip the card</h4>
      <h5>Proficient</h5>
      <p>Improve your memory by finding a pair for each card!</p>
      <a href="/game-sequence" class="btn btn-game">Play</a>
    </li>
    <li class="games__game">
      <img src="/games-img-cool.png" alt="">
        <h4>Color check</h4>
        <h5>Proficient</h5>
        <p>Is the block the same color as it says? <br> Lets play!</p>
      <a href="/game-sequence" class="btn btn-game">Play</a>
    </li>
  <% } %>
</ul>
<% if (user) { %>
    <% if (user.isManager) { %>
        <div class="container">
            <a href="/add-game" class="btn btn-game">Add game</a>
        </div>
    <% } %>
<% } %>
<%- include('partials/footer'); -%>